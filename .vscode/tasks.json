{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (x64)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/FormsTest/FormsTest.csproj",
                "/p:RuntimeIdentifiers=osx-x64",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "env": {
                    "MSBUILDENSURESTDOUTFORTASKPROCESSES": "1"
                }
            }
        },
        {
            "label": "build (arm64)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/FormsTest/FormsTest.csproj",
                "/p:RuntimeIdentifiers=osx-arm64",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "env": {
                    "MSBUILDENSURESTDOUTFORTASKPROCESSES": "1"
                }
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/FormsTest/FormsTest.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/FormsTest/FormsTest.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}