<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>xamarinmac20</TargetFrameworks>
    <TargetFrameworks Condition="'$(SkipMacNet6Projects)' != 'true'">$(TargetFrameworks);net6.0-macos;net6.0-ios</TargetFrameworks>
    <TargetFrameworks Condition="'$(SkipMacProjects)' == 'true'">netstandard2.0</TargetFrameworks>
    <DefineConstants>MAISONABE;STATIC_PREMULTIPLY_TABLES</DefineConstants>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>System.Drawing</RootNamespace>
    <DisableExtraReferences>true</DisableExtraReferences>
    <EnableDefaultItems>false</EnableDefaultItems>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <EnableDefaultEmbeddedResourceItems>false</EnableDefaultEmbeddedResourceItems>
    <LangVersion>latest</LangVersion>
    <AssemblyVersion>5.0.0</AssemblyVersion>
  </PropertyGroup>

  <!-- Check API compatibility against System.Drawing.Common from .NET 5 -->
  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsDesktop.App.Ref" Version="5.0.0" PrivateAssets="All" GeneratePathProperty="true" ExcludeAssets="All" />   
    <PackageReference Include="Microsoft.NETCore.App.Ref" Version="5.0.0" PrivateAssets="All" GeneratePathProperty="true" ExcludeAssets="All" />   
  </ItemGroup>
  <PropertyGroup>
    <ApiCompatExcludeAttributeList>..\ApiCompatExcludeAttributes.txt</ApiCompatExcludeAttributeList>
    <ContractDependencyPaths>$(PkgMicrosoft_NETCore_App_Ref)\ref\net5.0</ContractDependencyPaths>
    <ApiCompatBaseline Condition="'$(TargetFramework)' == 'net6.0-ios'">ApiCompatBaseline.iOS.txt</ApiCompatBaseline>
  </PropertyGroup>
  <ItemGroup>
    <ResolvedMatchingContract Include="$(PkgMicrosoft_WindowsDesktop_App_Ref)\ref\net5.0\System.Drawing.Common.dll" />
  </ItemGroup>
  <ItemGroup Condition="'$(SkipMacProjects)' != 'true'">
    <PackageReference Include="Microsoft.DotNet.ApiCompat" Version="6.0.0-beta.20569.4" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'xamarinmac20'">
    <ProjectReference Include="..\System.Drawing.Primitives\System.Drawing.Primitives.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
    <EmbeddedResource Include="Resources\Strings.resx" />
    <EmbeddedResource Include="Resources\Mono.ico" LogicalName="Mono.ico" />
    <EmbeddedResource Include="Resources\Shield.ico" LogicalName="Shield.ico" />
    <EmbeddedResource Include="Resources\Warning.ico" LogicalName="Warning.ico" />
    <Compile Include="Resources\*.cs" />
    <Compile Include="System.Drawing\*.cs" />
    <Compile Include="System.Drawing.Design\*.cs" />
    <Compile Include="System.Drawing.Drawing2D\*.cs" />
    <Compile Include="System.Drawing.Imaging\*.cs" />
    <Compile Include="System.Drawing.Text\*.cs" />
    <Compile Include="Utilities\*.cs" />
    <Compile Include="Utilities\ClipperLib\clipper.cs" />
    <Compile Include="System.Drawing.Mac\*.cs" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'xamarinmac20' OR '$(TargetFramework)' == 'net6.0-macos'">
    <Compile Include="System.Drawing.Printing\*.cs" />
  </ItemGroup>
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>MacBridge</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
</Project>